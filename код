def print_tables():
    # Таблица умножения
    print("Таблица умножения:")
    for i in range(1, 10):
        for j in range(1, 10):
            print(f"{i} * {j} = {i * j}\t", end="")
        print()
    
    # Таблица сложения
    print("\nТаблица сложения:")
    for i in range(1, 10):
        for j in range(1, 10):
            print(f"{i} + {j} = {i + j}\t", end="")
        print()

# Вызываем функцию для печати таблиц
print_tables()
